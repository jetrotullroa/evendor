<div class="card product">
  <img src="<%= @product.image %>" alt="" class="card-img-top img-responsive" alt="image of <%= @product.name %>">
  <div class="card-block">
    <h4 class="card-title product-name"><%= @product.name %></h4>
    <p class="card-text">
      SGD
      <span class="product-price"><%= @product.price %></span>
    </p>
    <p class="card-text">
      <span class="product-size"><%= @product.pack_size %></span>
    </p>
  </div>
</div>
